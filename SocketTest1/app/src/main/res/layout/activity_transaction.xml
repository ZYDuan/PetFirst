<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.yd.sockettest1.Activity.Transaction">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/royalblue"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="填写订单"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/TC_white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" 姓名:  "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:background="@color/white"
                android:id="@+id/editText_name"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" 手机号码:  "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/textView4" />
            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:background="@color/white"
                android:ems="10"
                android:inputType="phone" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" 宠物品种:  "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/textView3" />

            <Spinner
                android:id="@+id/spinner_pettype"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:entries="@array/pettype"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" 开始时间:  "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/textView7" />

            <Button
                android:id="@+id/button_date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="选择日期"
                android:background="@color/beige"/>

            <TextView
                android:id="@+id/textView_starttime"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" 领回时间:  "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/textView8" />

            <Button
                android:id="@+id/button_end"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="选择日期"
                android:background="@color/beige"/>

            <TextView
                android:id="@+id/textView_endtime"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <EditText
            android:id="@+id/editView_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:hint="注意事项...若无输入无"
            android:lines="10"
            android:maxLines="10" />
        <Button
            android:id="@+id/button_OK"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:text="提交订单"
            android:background="@color/royalblue"
            android:textColor="@color/TC_white"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
